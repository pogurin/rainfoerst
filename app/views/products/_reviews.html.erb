<div id="review-list">
	<% @product.reviews.each do |review| %>

	<div class="review">
		<div class="poster">
			<% if review.user != nil %>
			<em> Posted by <%= review.user.email %></em>
			Added on: <%= review.created_at %>
			<p class="comment">
				<%= review.comment %>
			</p>

			<% if !review.new_record? && current_user.id == review.user_id %>
			<%= link_to "Delete", product_review_path(@product, review), method: :delete, data:{confirm: "Are you sure you want to delete this comment?"}  %>
			<% end %>

			<% if !review.new_record? && current_user.id == review.user_id %>
			<%= link_to "Edit your review", edit_product_review_path(@product,review)%>
			<% end %>

			<% end %>
		</div>

	</div>

	<% end %>
</div>